@model IEnumerable<TotemPWA.Models.Combo>

@{
    ViewData["Title"] = "Gerenciar Combos";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Gerenciar Combos</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Novo Combo
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Nenhum combo cadastrado ainda.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var combo in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">@combo.Name</h5>
                            <span class="badge @(combo.IsActive ? "bg-success" : "bg-secondary")">
                                @(combo.IsActive ? "Ativo" : "Inativo")
                            </span>
                        </div>
                        
                        @if (combo.Image != null)
                        {
                            <img src="@Url.Action("GetImage", "Combo", new { id = combo.Id })" 
                                 class="card-img-top" alt="@combo.Name" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-image fa-3x text-muted"></i>
                            </div>
                        }
                        
                        <div class="card-body">
                            <p class="card-text">@combo.Description</p>
                            
                            <div class="mb-3">
                                <strong>Preço: R$ @combo.Price.ToString("0.00")</strong>
                                @if (ViewBag.PrecoPromocional != null)
                                {
                                    <br>
                                    <span class="text-danger">
                                        <strong>Promoção: R$ @ViewBag.PrecoPromocional.ToString("0.00")</strong>
                                    </span>
                                }
                            </div>
                            
                            <div class="mb-3">
                                <strong>Produtos do Combo:</strong>
                                <ul class="list-unstyled mt-2">
                                    @foreach (var comboProduct in combo.ComboProducts)
                                    {
                                        <li>
                                            <i class="fas fa-check text-success"></i>
                                            @comboProduct.Product.Name
                                            @if (comboProduct.Quantity > 1)
                                            {
                                                <span class="badge bg-info">x@comboProduct.Quantity</span>
                                            }
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                        
                        <div class="card-footer">
                            <div class="btn-group w-100" role="group">
                                <a asp-action="Details" asp-route-id="@combo.Id" class="btn btn-outline-info btn-sm">
                                    <i class="fas fa-eye"></i> Detalhes
                                </a>
                                <a asp-action="Edit" asp-route-id="@combo.Id" class="btn btn-outline-warning btn-sm">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a asp-action="Promotion" asp-route-id="@combo.Id" class="btn btn-outline-success btn-sm">
                                    <i class="fas fa-percentage"></i> Promoção
                                </a>
                                <a asp-action="Delete" asp-route-id="@combo.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="fas fa-trash"></i> Excluir
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        // Adicionar confirmação para exclusão
        $(document).ready(function() {
            $('a[asp-action="Delete"]').click(function(e) {
                if (!confirm('Tem certeza que deseja excluir este combo?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
} 