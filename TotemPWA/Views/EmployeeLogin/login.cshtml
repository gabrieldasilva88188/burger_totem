@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login Administrativo</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body class="bg-dark text-white d-flex align-items-center justify-content-center" style="height:100vh;">
    <div class="card text-dark p-4" style="width: 400px;">
        <h3 class="text-center mb-3">Acesso Administrativo</h3>
        <!-- Adicionar asp-action e asp-controller -->
        <form method="post" asp-controller="EmployeeLogin" asp-action="Login">
            <div class="mb-3">
                <label>Usuário</label> <!-- Alterado de Email para Usuário -->
                <input name="user" class="form-control" required />
            </div>
            <div class="mb-3">
                <label>Senha</label>
                <input name="password" type="password" class="form-control" required />
            </div>
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }
            <div class="d-grid">
                <button type="submit" class="btn btn-dark">Entrar</button>
            </div>
        </form>
    </div>
</body>
</html>
