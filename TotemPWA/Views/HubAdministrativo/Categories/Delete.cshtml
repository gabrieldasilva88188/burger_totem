@model TotemPWA.Models.Category
@{
    ViewBag.Title = "Excluir Categoria";
}
<h2>Excluir Categoria</h2>
<div>
    <h4>Tem certeza que deseja excluir a categoria <strong>@Model.Name</strong>?</h4>
    <form asp-action="DeleteCategory" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a href="@Url.Action("Categories", "HubAdministrativo")" class="btn btn-secondary">Cancelar</a>
    </form>
</div> 