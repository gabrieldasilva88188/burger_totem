@model TotemPWA.Models.Ingredient
@{
    ViewBag.Title = "Editar Ingrediente";
}
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Hub Administrativo";
}
<link rel="stylesheet" href="@Url.Content("~/css/produto/editarProduto.css")">
<h2>Editar Ingrediente</h2>
<form asp-action="EditIngredient" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name">Nome</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">Pre√ßo</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Limit">Limite</label>
        <input asp-for="Limit" class="form-control" type="number" />
        <span asp-validation-for="Limit" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Imagem Atual</label>
        @if (Model.Image != null)
        {
            <img src="@Url.Action("GetIngredientImage", "HubAdministrativo", new { id = Model.Id })" alt="Imagem do Ingrediente" style="max-width:100px;max-height:100px;" />
        }
        else
        {
            <span>Sem imagem</span>
        }
    </div>
    <div class="form-group">
        <label>Alterar Imagem</label>
        <input type="file" name="ImageFile" class="form-control" accept="image/*" />
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    <a href="@Url.Action("Ingredients", "HubAdministrativo")" class="btn btn-secondary">Cancelar</a>
</form> 