@model TotemPWA.Models.Ingredient

@{
    ViewData["Title"] = "Editar Ingrediente";
}

<h2>Editar Ingrediente</h2>

<form asp-action="EditIngredient" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Limit"></label>
        <input asp-for="Limit" class="form-control" />
        <span asp-validation-for="Limit" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Imagem do Ingrediente</label>
        <input type="file" name="ImageFile" class="form-control" accept="image/*" />
        @if (Model.Image != null)
        {
            <div class="mt-2">
                <img src="@Url.Action("GetIngredientImage", "HubAdministrativo", new { id = Model.Id })" alt="Imagem do Ingrediente" style="max-width: 200px; max-height: 120px; border:1px solid #ccc;" />
            </div>
        }
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Ingredients" class="btn btn-secondary">Voltar</a>
</form>

