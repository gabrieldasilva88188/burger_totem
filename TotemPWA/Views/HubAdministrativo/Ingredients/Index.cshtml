@model IEnumerable<TotemPWA.Models.Ingredient>
@{
    ViewData["Title"] = "Ingredientes";
}
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Hub Administrativo";
}
<link rel="stylesheet" href="@Url.Content("~/css/produto/produtosCRUD.css")">

<h2>Ingredientes</h2>
<p>
    <a href="@Url.Action("CreateIngredient", "HubAdministrativo")" class="btn btn-primary">Adicionar Ingrediente</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Imagem</th>
            <th>Nome</th>
            <th>Preço</th>
            <th>Limite</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.Image != null)
                    {
                        <img src="@Url.Action("GetIngredientImage", "HubAdministrativo", new { id = item.Id })" alt="Imagem" style="max-width: 60px; max-height: 40px; border:1px solid #ccc;" />
                    }
                </td>
                <td>@item.Name</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Limit</td>
                <td>
                    <a asp-action="EditIngredient" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="DeleteIngredient" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
