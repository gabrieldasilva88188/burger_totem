@model TotemPWA.Models.Product
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Hub Administrativo";
}
<link rel="stylesheet" href="@Url.Content("~/css/produto/deletarProduto.css")">

<h2>Excluir Produto</h2>

<div class="alert alert-danger">
    <strong>Tem certeza que deseja excluir este produto?</strong>
</div>

<div class="mb-3">
    <label class="form-label">Nome:</label>
    <div>@Model.Name</div>
</div>
<div class="mb-3">
    <label class="form-label">Descrição:</label>
    <div>@Model.Description</div>
</div>
<div class="mb-3">
    <label class="form-label">Preço:</label>
    <div>R$ @Model.Price.ToString("F2")</div>
</div>
<div class="mb-3">
    <label class="form-label">Categoria:</label>
    <div>@Model.Category?.Name</div>
</div>
<div class="mb-3">
    <label class="form-label">Imagem:</label><br />
    @if (Model.Image != null)
    {
        <img src="@Url.Action("GetImage", "HubAdministrativo", new { id = Model.Id })" alt="Imagem" width="80" height="80" style="object-fit:cover; border-radius:8px;" />
    }
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
      <a href="@Url.Action("Products", "HubAdministrativo")" class="btn btn-secondary">Cancelar</a>
</form> 