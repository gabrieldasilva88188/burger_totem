@model IEnumerable<TotemPWA.Models.Product>

<link rel="stylesheet" href="@Url.Content("~/css/produto/produtosCRUD.css")">

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Produtos</h2>
<a class="btn btn-success" asp-action="Create">Novo Produto <i class="fas fa-plus"></i></a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Imagem</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th>Categoria</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.Image != null)
                    {
                        <img src="@Url.Action("GetImage", "HubAdministrativo", new { id = item.Id })" alt="Imagem" width="100" height="100" style="object-fit:cover; border-radius:8px;" />
                    }
                </td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>R$ @item.Price.ToString("F2")</td>
                <td>@item.Category?.Name</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar<i class="fas fa-edit"></i></a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Exluir<i class="fas fa-trash"></i></a>
                    <a class="btn btn-warning btn-sm" asp-action="ManageIngredients" asp-route-id="@item.Id">Gerenciar Ingredientes <i class="fas fa-cogs"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table> 